<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/reponseArena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/equipe"
        android:layout_below="@+id/equipe"
        android:layout_marginTop="23dp"
        android:text="REPONSE"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/reponseMoyenne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/equipe"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="52dp"
        android:text="REPONSE"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/moyenne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reponseMoyenne"
        android:layout_alignLeft="@+id/reponseMoyenne"
        android:layout_marginBottom="14dp"
        android:text="Moyenne des capacités :" />

    <EditText
        android:id="@+id/reponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/equipe"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/equipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/reponseArena"
        android:layout_alignBottom="@+id/reponseArena"
        android:layout_alignParentLeft="true"
        android:text="Nom de l&apos;équipe jouant à l&apos;Aréna" />

    <TextView
        android:id="@+id/reponseNomArena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomArena"
        android:layout_below="@+id/nomArena"
        android:layout_marginTop="17dp"
        android:text="REPONSE"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/nomArena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/moyenne"
        android:layout_alignParentTop="true"
        android:text="Nom de l&apos;aréna du 1er enregistrement :" />

</RelativeLayout>